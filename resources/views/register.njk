{% extends 'layout' %}

{% block content %}


<h2>Regisztráció</h2>
{% if  old('errors')%}
<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">Hibalista</h3>
  </div>
  <div class="panel-body">
    <ul>
{% for error in old('errors')%}
<li>{{ error.message }}</li>
{% endfor %}
</ul>
  </div>
</div>
{% endif%}

<form class="form-horizontal" action="" method="POST">
    {{ csrfField}}
    <div class="form-group">
      <label for="username" class="col-lg-2 control-label">Felhasználónév</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" id="username" name="username" value="{{ old('username')}}">
      </div>
    </div>
    <div class="form-group">
      <label for="email" class="col-lg-2 control-label">Email cím</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" id="email" name="email" value="{{ old('email')}}">
      </div>
    </div>
    <div class="form-group">
      <label for="password" class="col-lg-2 control-label">Jelszó</label>
      <div class="col-lg-10">
        <input type="password" class="form-control" id="password" name="password" value="">
      </div>
    </div>
    <div class="form-group">
      <label for="password_confirm" class="col-lg-2 control-label">Jelszó megerősítése</label>
      <div class="col-lg-10">
        <input type="password" class="form-control" id="password_confirm" name="password_confirm" value="">
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <button type="reset" class="btn btn-default">Cancel</button>
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
</form>

{% endblock %}